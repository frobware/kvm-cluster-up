#cloud-config

growpart:
  mode: auto
  devices: ['/']

users:
  - name: @@KUP_CLOUD_USERNAME@@
    shell: /bin/bash
    lock-passwd: false
    sudo: ALL=(ALL) NOPASSWD:ALL
    ssh-authorized-keys:
      - @@SSH_KEY_DATA@@

chpasswd:
  list: |
    @@KUP_CLOUD_USERNAME@@:password
  expire: false

ssh_pwauth: True
disable_root: false

package_reboot_if_required: false
package_upgrade: false

runcmd:
  - touch /etc/cloud/cloud-init.disabled

power_state:
  mode: poweroff
  condition: True
